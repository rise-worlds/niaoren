<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="68dp">
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/eh" android:layout_width="match_parent" android:layout_height="68dp">
        <ImageView android:id="@+id/hc" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toRightOf="@+id/hc" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="#ffffffff" android:id="@+id/yy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_toRightOf="@+id/hc"/>
            <TextView android:textSize="11sp" android:textColor="#ffffffff" android:id="@+id/xp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_toRightOf="@+id/hc" android:layout_below="@+id/yy"/>
        </LinearLayout>
        <TextView android:textSize="12dp" android:textColor="#ffffffff" android:id="@+id/yw" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="时间" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
